# Stravito API Configuration
IHUB_API_KEY=your_stravito_api_key_here
IHUB_BASE_URL=https://your-stravito-base-url.com

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Optional: Stravito API Polling Configuration
# The system will poll the API until message status is 'COMPLETED'
# STRAVITO_POLL_MAX_RETRIES=60   # Maximum number of polls (default: 60 = 2 minutes with 2s interval)
# STRAVITO_POLL_INTERVAL=2        # Seconds between polls (default: 2)
